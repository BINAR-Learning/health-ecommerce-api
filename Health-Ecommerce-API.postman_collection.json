              "pm.test(\"Error response\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.eql(false);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/products/invalid-id",
          "host": ["{{base_url}}"],
          "path": ["api", "products", "invalid-id"]
